    transition: all 0.3s ease;
}

.tools-category:hover, .tools-category.active {
    background-color: white;
    color: #1e3a8a;
}

/* Â∑•ÂÖ∑ÂàóË°®ÈÉ®ÂàÜÊ†∑Âºè */
.tools-list {
    padding: 80px 0;
    background-color: #f8f9fa;
}

.tools-filter {
    display: flex;
    align-items: center;
    margin-bottom: 30px;
}

.filter-label {
    font-weight: 500;
    margin-right: 15px;
}

.filter-options {
    display: flex;
