# Creem 支付配置
# 获取方式：https://creem.io -> Developer -> API Keys

# 测试环境
CREEM_TEST_API_KEY=your_test_api_key_here
CREEM_TEST_WEBHOOK_SECRET=your_test_webhook_secret_here

# 生产环境
CREEM_LIVE_API_KEY=your_live_api_key_here
CREEM_LIVE_WEBHOOK_SECRET=your_live_webhook_secret_here

# 环境设置
NODE_ENV=development
CREEM_ENVIRONMENT=sandbox  # sandbox 或 production

# 网站配置
SITE_URL=http://localhost:8000
WEBHOOK_URL=http://localhost:8000/api/creem/webhook

# 会员计划配置
BASIC_PLAN_PRICE=29     # €29/月
PRO_PLAN_PRICE=79       # €79/季度  
ENTERPRISE_PLAN_PRICE=299  # €299/年
